<dl>
  <dt>APR</dt>
  <dd><%=(@apr*100).to_fs(:percentage,{:precision => 4})%></dd>
  <dt>Number of years</dt>
  <dd><%=@years / 12%></dd>
  <dt>Principal</dt>
  <dd><%=@principal.to_fs(:currency)%></dd>
  <dt>Payment</dt>
  <dd><%=@out.to_fs(:currency)%></dd>
</dl>
